<div class="row-fluid" >
  <div class="package_form_errors_container">

  </div>
  <div class="row-fluid top20">
    <div class="span12">
      <% @restaurants = current_user.restaurants %>
      <% @restaurants.each_with_index do |restaurant, index| %>
        <div class="row-fluid top10">
          <div class="span6 offset1 contact package_link">
            <h6><%= restaurant.name %></h6>
          </div>
          <div class="span2 contact package_link">
           <h6>$<%= current_user.try(:price).try(:plan).try(:name) %></h6>
          </div>
          <div class="span2 contact package_link">
            <h6><%= restaurant.created_at.strftime("%x") %></h6>
          </div>
        </div>
      <% end %>  
    </div>  
    <div class="span12">
      <div class="row-fluid">
        <div class="span6 offset6">
          <h6>Monthly Total $<%= restaurants_total_amount %></h6>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal Activate Service -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
  <div class="modal-body">
    <p>Are you sure you want to activate the service?</p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    <%= link_to 'OK', activate_service_accounts_path,  {:remote => true, 'data-dismiss' =>  "modal", 'aria-hidden' => 'true', :class => 'btn btn-primary'}  %>
  </div>
</div>

<!-- Modal Cancel Service -->
<div id="myModalCancel" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
  <div class="modal-body">
    <p>Are you sure you want to cancel the service?</p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    <%= link_to 'OK', cancel_service_accounts_path, {:remote => true, 'data-dismiss' =>  "modal", 'aria-hidden' => 'true', :class => 'btn btn-primary', :id => 'ok_submit_form'} %>
  </div>
</div>

