<div class="well">
  <div class="row-fluid">
    <div class="span6 offset3">
      <div class="row-fluid">
        <div class="span12">
          <center><%= image_tag 'signup/brand.png' %></center>
        </div>
      </div>
      <%= form_for(resource, :as => resource_name, :url => session_url(resource_name, protocol: (request.ssl?) ? 'https' : 'http')) do |f| %>
          <%= devise_error_messages! %>

          <div class="row-fluid top10">
            <div class="span12">
              <%= f.text_field :login, :autofocus => true, :placeholder => "Username or email",:class=>"input-block-level" %>
              <%= f.password_field :password, :placeholder => "Password", :class=>"input-block-level" %>
            </div>
            <div class="span4 offset8">
              <%= link_to "Forgot password?", new_password_path(resource_name) %>
            </div>
          </div>
          <!-- <div class="row-fluid top10">
              <div class="span8">
                  <% if devise_mapping.rememberable? -%>
                       <%= f.label :remember_me,:class=>"pull-left" %>   <%= f.check_box :remember_me,:class=>"pull-left",:style=>"margin-left:20px;" %>
                  <% end -%>
              </div>
          </div> -->

          <div class="row-fluid top10" style="margin-top:20px;">
            <div class="span12">
              <%= f.submit "Sign In", :class=>"btn btn-primary full-width" %>
            <!--   <%= link_to "Forgot your password?", new_password_path(resource_name),:class=>"btn btn-info" %><br /> -->
            </div>
          </div>
          <div class="row-fluid top10" style="margin-top:20px;">
            <div class="span8 offset2">
              <p>Don't have a BYTE account?  <span> <%= link_to "Sign Up", index_user_registration_path %></span></p>
            <!--   <%= f.submit "Sign In",:class=>"btn btn-primary" %> -->
              
            </div>
          </div>
      <% end %>
    </div>
   <!--  <div class="span4">
      <div class="login-button-left">
        <p>Don't have an account?</p>
        <%= link_to "Register", index_user_registration_path,:class=>"btn btn-info" %>
      </div>
    </div> -->
  </div>
</div>

<style type="text/css">
.full-width {
  width: 100% !important;
  background-color: #DA2A50;
}
span a {
  color: #DA2A50 !important;
}
input {
  margin-top: -1px;
}
#user_login {
  border-radius: 5px 5px 0 0 !important;
}
#user_password {
  border-radius: 0 0 5px 5px !important;
}
</style>