<div class="span5">
  <h3>Change Password</h3>
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :autocomplete => "off"}) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
      <div class="row-fluid top10">
        <%= f.password_field :password, :autocomplete => "off", :placeholder =>
            "New Password", :class => 'span12' %>
      </div>
      <div class="row-fluid top10">
        <%= f.password_field :password_confirmation, :class => 'span12', :placeholder =>
            "Confirm Password" %>
      </div>
      <div>
        <%= link_to "Cancel", root_path, :class => "btn btn-cancel" %>
        <%= f.submit "Save", :class => "btn btn-primary" %>
      </div>
  <% end %>
</div>
