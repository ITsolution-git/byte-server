<div class="block-head clearfix header-menu-mgt">
	<span class="<%= load_toogle_icon(item_option) %>" data-toggle="collapse" data-target="#menu_option_toggle">
	</span>
	<span class="wrap_title_form">
		<%= render partial: 'menus/menu_option_title_form', locals: {item_option: item_option} %>
	</span>

  <% if @tutorialVideos.present? %>
    <% if ( v = @tutorialVideos.find { |v| v['title'] == "Create Menu Options" } ) && ( v['url'] != '' ) %>
      <% @hasVideo = true %>
      <% @url = v['url'] %>
    <% else %>
      <% @hasVideo = false %>
      <% @url = '' %>
    <% end %>
  <% end %>

  <% if @hasVideo %>
    <%= image_tag("play_icon.png", :class => "playTutorial playTutorialBtn floatright", :id => "5") %>
  <% end %>

	<%= link_to "", "#", :class => "icon-question-sign btn floatright", :id => 'menu_option_tooltip', :title => load_content_of_file('/public/tooltip/menu_option.html'), :"data-toggle"=>"tooltip", "data-placement "=> "right", "data-html" => "true", :rel => "tooltip", :style => "color:#333;" %>

  <div class="tutorialVideo" id="5" style="display:none;">
    <br>
    <iframe width="100%" height="400" src="<%= @url %>" frameborder="0" allowfullscreen></iframe>
  </div>

</div>
<div id="menu_option_toggle"  class="collapse <%= toogle_state(item_option) %>">
	<%= render partial: 'menus/menu_option_form_primary', locals: {item_option: item_option} %>
</div>
<script type="text/javascript">
	$('#menu_option_tooltip').tooltip();
</script>
