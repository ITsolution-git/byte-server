var wrapper = $("#myModal_menu_<%= @menu.id %> .wrapper-preview");
<% if @device == 'iPhone' %>
if (!wrapper.hasClass('iphone')) {
  wrapper.addClass('iphone');
  wrapper.removeClass('android');
}
<% else %>
if (wrapper.hasClass('iphone')) {
  wrapper.removeClass('iphone');
  wrapper.addClass('android');
}
<% end %>
$("#myModal_menu_<%= @menu.id %> .wrapper-preview").html("<%= j render partial: 'menus/phone_preview_template', locals: {menu: @menu, device: @device, :location => @restaurant} %>");
var indicator = $('#myModal_menu_<%= @menu.id %> .wrapper-preview .carousel-indicators');
indicator.css({'margin-left': -indicator.width()/2});