<% name = @menu.name %>
<% if @restaurant.menus.count == 0 %>
  $('#menus_container').html("<%= j render :partial=>'instructions' %>")
  <%else %>
  $('#menus_container #wrapper_menu_container_<%=@menu.id %>').remove()
<% end %>
<%
  @menu = Menu.new
  combo_item = ComboItem.new
%>
$('.menu_form_block_container .wrap_title_form').html("<%= j render :partial => 'menus/menu_title_form' %>");
$('.menu_form_block_container #menu_form_toggle').html("<%= j render :partial => 'menus/menu_form_primary' %>");
$('.build_menu_block_container #build_menu_toggle').html("<%= j render :partial=>"menus/build_menu_form_primary" %>");
$(".menu_form_errors_container").html("<%= j render("layouts/form_success", :message => "#{name} and all menu items has been deleted.") %>").show().delay(3000).fadeOut();

$(".combo_item_form_block_container .wrap_title_form").html("<%= j render partial: "menus/combo_item_title_form", locals: {combo_item: combo_item} %>");
$(".combo_item_form_block_container #combo_item_form_toggle").html("<%= j render partial: "menus/combo_item_form_primary", locals: {combo_item: combo_item} %>");
