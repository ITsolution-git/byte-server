<% if !@menus_array.empty? %>
  <% modal_id = 'menu-modal' %>
  <%= form_tag({}, {class: 'batch-delete-form', data: {source: 'menus', error_class: 'menu_form_errors_container'}}) do |f| %>
    <a class="btn" data-toggle="modal" data-target="#<%= modal_id %>">
      <% if @menu.new_record? %>
        Edit Menu
      <% else %>
        <%= @menu.name %>
      <% end %>

      <span class="caret"></span>
    </a>
    <% link = 'edit_restaurant_menu_path(@restaurant, item)' %>
    <%= render partial: '/menus/menu_modal', locals: {array: @menus_array, is_published: 'published?', modal_id: modal_id, link: link} %>
<% end %>
<% end %>
