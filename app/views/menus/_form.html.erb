<div class="block-head clearfix header-menu-mgt">
  <span class="<%= load_toogle_icon(@menu) %>" data-toggle="collapse" data-target="#menu_form_toggle"></span>
  <span class="wrap_title_form">
    <%= render 'menus/menu_title_form' %>
  </span>

  <% if @tutorialVideos %>
    <% if ( v = @tutorialVideos.find { |v| v['title'] == "Create Menu Profile" } ) && ( v['url'] != '' ) %>
      <% @hasVideo = true %>
      <% @url = v['url'] %>
    <% else %>
      <% @hasVideo = false %>
      <% @url = '' %>
    <% end %>
  <% end %>

  <% if @hasVideo %>
    <%= image_tag("play_icon.png", :class => "playTutorial playTutorialBtn floatright", :id => "2") %>
  <% end %>

  <%= link_to "","#",:class=>"icon-question-sign btn floatright", :id => 'menu_profile_tooltip', :title => load_content_of_file('/public/tooltip/menuprofile.html'), :"data-toggle"=>"tooltip","data-placement"=>"right","data-html"=>"true",:rel=>"tooltip",:style=>"color:#333;" %>

  <div class="tutorialVideo" id="2" style="display:none;">
    <br>
    <iframe width="100%" height="400" src="<%= @url %>" frameborder="0" allowfullscreen></iframe>
  </div>

</div>
<div id="menu_form_toggle" class="collapse <%= toogle_state(@menu) %>">
  <%= render 'menus/menu_form_primary' %>
</div>
<script type="text/javascript">
  $('#menu_profile_tooltip').tooltip();
</script>

