<%= link_to @resturant.name+' ->', edit_restaurant_path(@resturant) %><%= link_to  ' Calendar','#' %>
<%= hidden_field_tag "location_id",@resturant.id %>
<% id = @resturant.id %>
<div class="row-fluid calendarRow">
	<div class="span12">
		<div class="well">
			<div id="calendar"></div>
		</div>
	</div>
</div>
<% content_for :scripts do %>


<script type="text/javascript">
$(document).ready(function(){
	var location_id = $("#location_id").attr('value');
	$('#calendar').fullCalendar({
			editable:true,
			events: "/menus/mymenus?id="+location_id
			
			
		});
});
</script>
<% end %>
