
<div class="row">
  <div class="span12" >
    <div class="well">
      <div class="row">
        <div class="span4 setup_heading">
          <h4>Setup your account</h4>
        </div>
        <div class="span7">
          <ul class="breadcrumb">
            <li>
              <%= link_to "Step 1: Restaurant Info",edit_restaurant_path(@restaurant)%>
              <span class="divider">/</span>
            </li>
            <li>
              <%= link_to "Step 2: Create Accounts",restaurant_accounts_path(@restaurant)%>
              <span class="divider">/</span>
            </li>
            <li class="active">
              <%= link_to "Step 3: Create Menu",step3_restaurant_path(@restaurant)%>
            </li>
          </ul>
        </div>
      </div>
      <div class="row top20 pad40">
        <div class="span5" >
          <h4>Create Menu</h4>
          <p class="top20 pad20">
            Congratulations! Your account is now setup!
            Click Continue to create menu.
          </p>
        </div>

        <div class="span6">
          <div class="row">
            <div class="span6 top20">
              <div class="span2">
                <%= link_to "Continue", restaurant_menus_path(@restaurant), :class=>"btn btn-primary btn-block-level btn-large"%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
